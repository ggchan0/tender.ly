<html>
   <!-- generic page template for all group pages -->
   <% include ../../partials/header %>
   </head>
   <body>
   <!-- changes title from groupData (sent in /group/:name route) -->
   <h2>Edit <%= groupData[0]["name"];%></h2>
      </br>
      Members:
      <ul>
      <!-- displays emails -->
      <% groupData[0]["emails"].forEach(function(el, index) {%>
         <li><%= el;%></li>
      <%});%>
      </ul>
      Add Member
      <!-- post to a generic URL (this is my favorite part of the project) -->
      <!-- check route /addMember/:name (so the :name is very important) --> 
      <form action='/groups/addMember/<%= groupData[0]["name"];%>' method="post">
      Email
      <input type="text" name="email" placeholder="Email" />
      <br>
      <button type="submit">Submit</button>
      </form>
   <% include ../../partials/footer %>
   </body>
</html>
